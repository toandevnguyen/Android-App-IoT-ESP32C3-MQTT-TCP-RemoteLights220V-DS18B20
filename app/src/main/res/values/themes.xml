<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RemoteLed" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Customize your light theme here. -->
        <item name="android:windowFullscreen">true</item>

        <item name="colorPrimaryVariant">@color/appBkg</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.RemoteLed" parent="Base.Theme.RemoteLed" />

    <style name="Theme.App.TransparentStatusBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Cài đặt thêm thuộc tính để content không bị status bar che khuất -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>